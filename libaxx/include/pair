#ifndef LIBAXX_PAIR
#define LIBAXX_PAIR

#include <stddef.h>
namespace std {

template <typename U, typename V>
struct pair {
  pair(U u, V v) : first(u), second(v) {}

  U first;
  V second;
};

template <typename U, typename V> pair<U,V> make_pair(U u, V v) {
  return pair<U,V>(u,v);
}

