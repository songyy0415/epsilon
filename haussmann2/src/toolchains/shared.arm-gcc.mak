CC := arm-none-eabi-gcc
CXX := arm-none-eabi-g++
AR := arm-none-eabi-gcc-ar
LD := arm-none-eabi-g++
GDB := arm-none-eabi-gdb

OBJCOPY := arm-none-eabi-objcopy

EXECUTABLE_EXTENSION := elf

SFLAGS += \
  -fdata-sections \
  -ffreestanding \
  -ffunction-sections \
  -ggdb3 \
  -nostdinc \
  -nostdlib

ifeq ($(DEBUG),0)
SFLAGS += -flto=auto
endif

LDFLAGS += \
  -lgcc \
  -Wl,--gc-sections
